{% extends 'base.html.twig' %}

{% block content %}
    <div class="glowna">
        <div class="container">
            <div class="header col-sm-12 ">
                <center><img src="{{ asset('images/naglowek1.png') }}" class="img-fluid" /></center>
            </div>

            <!-- Article List -->



                <!-- H1 Article -->

                <!-- Supporting Articles -->

            <div class="row">
                <main>
                    <article class="posty col-sm-12">

                        {% for article in articles %}
                            <div class="article-container my-1">
                                <a href="{{ path('article_show', {slug: article.slug}) }}">
                                    <img class="article-img" src="{{ asset(article.imagePath) }}">
                                    <div class="article-title d-inline-block pl-3 align-middle">
                                        <span class="article-tit">{{ article.title }}</span>
                                        <small>({{ article.nonDeletedComments|length }} comments)</small>
                                        <br>
                                        {% for tag in article.tags %}
                                            <small>
                                                <span class="badge badge-light">{{ tag.name }}</span>
                                            </small>
                                        {% endfor %}
                                        <br>
                                        <span class="align-left article-details"><img class="article-author-img rounded-circle" src="{{ asset('images/comment_icone1.png') }}"> {{ article.author }} </span>
                                        <span class="pl-5 article-details float-right"> {{ article.publishedAt ? article.publishedAt|ago }}</span>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}

            </article>
            </main>
        </div>
    </div>
</div>






<!-- Right bar ad space -->



{% endblock %}
